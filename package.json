{
  "name": "central-de-comandas",
  "version": "1.0.0",
  "description": "Este repositório tem por objetivo criar uma aplicação em javascript que substitua uma comanda em papel de uma clinica de estética. Esta aplicação deve cumprir o seguinte: - Anotar os Serviços à serem executados - Realizar uma pesquisa de preferências do Cliente - Ser assinado por rubrica com o mouse o touch - Enviar as informações coletadas por PDF",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "test": "npm run services:up && npm run services:wait:database && concurrently -n next,jest -k -s command-jest --hide next \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:down",
    "test:watch": "jest --runInBand --watchAll --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-database.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:write": "prettier --write .",
    "lint:eslint:check": "eslint .",
    "lint:eslint:write": "eslint --fix .",
    "populate:database": "node infra/scripts/populate-database.js",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/postcss": "^4.1.18",
    "bcryptjs": "3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cookie": "1.1.1",
    "dotenv": "17.2.3",
    "dotenv-expand": "12.0.3",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.4",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-connect": "1.0.0",
    "node-pg-migrate": "7.9.1",
    "nodemailer": "7.0.12",
    "pg": "8.16.3",
    "postcss": "^8.5.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.1",
    "react-signature-canvas": "^1.1.0-alpha.2",
    "sonner": "^2.0.3",
    "swr": "2.3.8",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "uuid": "11.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@faker-js/faker": "9.9.0",
    "@types/jest": "30.0.0",
    "async-retry": "1.3.3",
    "commitizen": "4.3.1",
    "concurrently": "9.2.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.6.0",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "prettier": "3.6.2",
    "set-cookie-parser": "2.7.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
